<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/Main_layout"
        android:layout_width="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textview_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/page1_select"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_txtview"
            android:elevation="10dp"
            android:drawableTint="@color/black"
            android:drawableEnd="@drawable/ic_baseline_location_on_24"
            android:layout_marginBottom="10dp"/>


        <EditText
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/page1_start"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="15dp"
            android:inputType="textPostalAddress"
            android:backgroundTint="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_txtview"
            android:elevation="10dp"
            android:drawableTint="@color/black"
            android:drawableEnd="@drawable/ic_baseline_map_24"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/page1_end"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:padding="10dp"
            android:inputType="textPostalAddress"
            android:background="@drawable/custom_txtview"
            android:elevation="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:drawableTint="@color/black"
            android:drawableEnd="@drawable/ic_baseline_map_24"
            android:layout_marginBottom="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/custom_txtview"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/grp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/radio1"
                    android:gravity="center"
                    android:checked="true"
                    android:buttonTint="@color/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Need Driver"/>

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:buttonTint="@color/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Self Drive"/>


            </RadioGroup>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:background="@drawable/custom_txtview"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/grp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio3"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:buttonTint="@color/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Drop"/>

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/radio4"
                    android:gravity="center"
                    android:checked="true"
                    android:buttonTint="@color/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick Up"/>

                </RadioGroup>
            </LinearLayout>




    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fincar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/appbar"
        android:text="@string/page1_btn1"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>
</ScrollView>