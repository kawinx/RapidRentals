<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_txtview"
    android:elevation="10dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_vehicle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/download" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_vehicle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/v_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuk Tuk"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/p_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Passengers"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:background="@drawable/custom_txtview"
                    android:backgroundTint="@color/bg"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 Ratings"
                    android:textSize="18dp"
                    android:backgroundTint="@color/bg"
                    android:background="@drawable/custom_txtview"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_baseline_star_24"
                    android:textColor="@color/black"/>



            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fincar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/custom_btn"
                android:textColor="@color/pink"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>